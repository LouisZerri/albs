{# Modals de mod√©ration #}
{% if is_granted('ROLE_MODERATOR') %}
    {# Modal d'avertissement #}
    <div id="warnModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-8 max-w-md w-full">
            <h3 class="text-xl font-bold mb-4">‚ö†Ô∏è Donner un avertissement</h3>
            <p class="text-gray-600 mb-4">Utilisateur : <span id="warnUsername" class="font-semibold"></span></p>
            <form id="warnForm" method="POST" action="{{ path('app_moderation_warn_user') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('warn_user') }}">
                <input type="hidden" name="user_id" id="warnUserId">
                <input type="hidden" name="post_id" id="warnPostId">
                
                <label class="block text-sm font-medium text-gray-700 mb-2">Raison de l'avertissement</label>
                <textarea name="reason" required class="w-full px-3 py-2 border border-gray-300 rounded-lg mb-4" rows="4" 
                          placeholder="Expliquez pourquoi cet avertissement est donn√©..."></textarea>
                
                <div class="flex gap-3">
                    <button type="button" onclick="closeWarnModal()" 
                            class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
                        Annuler
                    </button>
                    <button type="submit" 
                            class="flex-1 px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 cursor-pointer">
                        Confirmer l'avertissement
                    </button>
                </div>
            </form>
        </div>
    </div>

    {# Modal de bannissement #}
    <div id="banModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-8 max-w-md w-full">
            <h3 class="text-xl font-bold mb-4 text-red-600">üö´ Bannir d√©finitivement</h3>
            <p class="text-gray-600 mb-4">Utilisateur : <span id="banUsername" class="font-semibold"></span></p>
            
            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4">
                <p class="text-red-800 text-sm">
                    <strong>‚ö†Ô∏è Attention :</strong> Cette action bannira imm√©diatement l'utilisateur sans avertissement pr√©alable.
                </p>
            </div>
            
            <form id="banForm" method="POST" action="{{ path('app_moderation_ban_user') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('ban_user') }}">
                <input type="hidden" name="user_id" id="banUserId">
                
                <label class="block text-sm font-medium text-gray-700 mb-2">Raison du bannissement</label>
                <textarea name="reason" required class="w-full px-3 py-2 border border-gray-300 rounded-lg mb-4" rows="4" 
                          placeholder="Expliquez pourquoi cet utilisateur est banni..."></textarea>
                
                <div class="flex gap-3">
                    <button type="button" onclick="closeBanModal()" 
                            class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 cursor-pointer">
                        Annuler
                    </button>
                    <button type="submit" 
                            class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 cursor-pointer">
                        Confirmer le bannissement
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
    function warnUser(userId, postId, username) {
        document.getElementById('warnUserId').value = userId;
        document.getElementById('warnPostId').value = postId;
        document.getElementById('warnUsername').textContent = username;
        document.getElementById('warnModal').classList.remove('hidden');
    }

    function closeWarnModal() {
        document.getElementById('warnModal').classList.add('hidden');
    }

    function banUser(userId, username) {
        document.getElementById('banUserId').value = userId;
        document.getElementById('banUsername').textContent = username;
        document.getElementById('banModal').classList.remove('hidden');
    }

    function closeBanModal() {
        document.getElementById('banModal').classList.add('hidden');
    }
    </script>
{% endif %}