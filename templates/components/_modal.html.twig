{# Modal d'avertissement #}
<div id="warnModal" 
     class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center"
     data-moderation-modal-target="warnModal"
     data-action="click->moderation-modal#clickOutside">
    <div class="bg-white rounded-xl p-6 max-w-md w-full mx-4 shadow-2xl">
        <h3 class="text-xl font-bold text-gray-900 mb-4">
            âš ï¸ Avertir <span data-moderation-modal-target="warnUsername" class="text-orange-600"></span>
        </h3>
        
        <p class="text-gray-600 mb-4">
            Cet utilisateur recevra un avertissement. Au bout de 3 avertissements, le compte sera banni.
        </p>
        
        <form method="POST" action="{{ path('app_moderation_warn_user') }}">
            <input type="hidden" name="_token" value="{{ csrf_token('warn_user') }}">
            <input type="hidden" name="user_id" data-moderation-modal-target="warnUserId">
            <input type="hidden" name="post_id" data-moderation-modal-target="warnPostId">
            <input type="hidden" name="discussion_id" data-moderation-modal-target="warnDiscussionId">
            
            <label class="block text-sm font-medium text-gray-700 mb-2">Raison de l'avertissement</label>
            <textarea name="reason" required 
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg mb-4 focus:ring-2 focus:ring-orange-500 focus:border-orange-500" 
                      rows="3" 
                      placeholder="Expliquez pourquoi cet utilisateur reÃ§oit un avertissement..."></textarea>
            
            <div class="flex gap-3">
                <button type="button" 
                        data-action="moderation-modal#closeWarn"
                        class="flex-1 px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer">
                    Annuler
                </button>
                <button type="submit" 
                        class="flex-1 px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-colors cursor-pointer">
                    Envoyer l'avertissement
                </button>
            </div>
        </form>
    </div>
</div>

