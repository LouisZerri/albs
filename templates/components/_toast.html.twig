{# Toast notification component avec animations √©chelonn√©es #}
<div style="position: fixed !important; top: 80px !important; right: 16px !important; z-index: 999999 !important; pointer-events: none !important;">
    {% set delay = 0 %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div 
                x-data="{ 
                    show: false,
                    init() {
                        setTimeout(() => {
                            this.show = true;
                        }, {{ delay * 150 }});
                        setTimeout(() => {
                            this.show = false;
                        }, {{ 5000 + (delay * 150) }});
                    }
                }"
                x-show="show"
                x-transition:enter="transform ease-out duration-500 transition"
                x-transition:enter-start="translate-x-full opacity-0"
                x-transition:enter-end="translate-x-0 opacity-100"
                x-transition:leave="transition ease-in duration-300"
                x-transition:leave-start="translate-x-0 opacity-100"
                x-transition:leave-end="translate-x-full opacity-0"
                style="max-width: 384px !important; width: 384px !important; margin-bottom: 16px; pointer-events: auto !important; box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1); border-radius: 8px; overflow: hidden;"
            >
                <div style="padding: 16px; 
                    {% if type == 'success' %}background: #f0fdf4; border-left: 4px solid #22c55e;
                    {% elseif type == 'error' %}background: #fef2f2; border-left: 4px solid #ef4444;
                    {% elseif type == 'warning' %}background: #fffbeb; border-left: 4px solid #f59e0b;
                    {% elseif type == 'badge' %}background: linear-gradient(135deg, #FBBF24 0%, #F59E0B 100%); border-left: 4px solid #F59E0B;
                    {% else %}background: #eff6ff; border-left: 4px solid #3b82f6;
                    {% endif %}">
                    <div style="display: flex; align-items: center;">
                        <div style="flex-shrink: 0; line-height: 1;">
                            {% if type == 'success' %}
                                <span style="font-size: 24px; display: block;">‚úÖ</span>
                            {% elseif type == 'error' %}
                                <span style="font-size: 24px; display: block;">‚ùå</span>
                            {% elseif type == 'warning' %}
                                <span style="font-size: 24px; display: block;">‚ö†Ô∏è</span>
                            {% elseif type == 'badge' %}
                                <span style="font-size: 24px; display: block; animation: bounce 1s infinite;">üèÜ</span>
                            {% else %}
                                <span style="font-size: 24px; display: block;">‚ÑπÔ∏è</span>
                            {% endif %}
                        </div>
                        <div style="margin-left: 12px; flex: 1; min-width: 0;">
                            <p style="margin: 0; font-size: 14px; font-weight: 500; line-height: 1.5; 
                                {% if type == 'success' %}color: #166534;
                                {% elseif type == 'error' %}color: #991b1b;
                                {% elseif type == 'warning' %}color: #92400e;
                                {% elseif type == 'badge' %}color: #ffffff;
                                {% else %}color: #1e40af;
                                {% endif %}">
                                {{ message|raw }}
                            </p>
                        </div>
                        <button @click="show = false" style="margin-left: 16px; flex-shrink: 0; color: {% if type == 'badge' %}#ffffff{% else %}#9ca3af{% endif %}; background: none; border: none; cursor: pointer; padding: 0;">
                            <svg style="width: 20px; height: 20px;" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            {% set delay = delay + 1 %}
        {% endfor %}
    {% endfor %}
</div>