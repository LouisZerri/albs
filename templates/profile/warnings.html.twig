{% extends 'base.html.twig' %}

{% block title %}Mes avertissements - À la bonne station{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 py-8">
    <div class="mb-6">
        <a href="{{ path('app_profile') }}" class="text-blue-600 hover:text-blue-800">
            ← Retour au profil
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-orange-500 to-red-600 px-8 py-6">
            <h1 class="text-3xl font-bold text-white">⚠️ Mes avertissements</h1>
            <p class="text-orange-100 mt-1">{{ warnings|length }} avertissement{{ warnings|length > 1 ? 's' : '' }} au total</p>
        </div>

        <div class="p-8">
            {% if warnings is empty %}
                <div class="text-center py-12">
                    <span class="text-6xl">✅</span>
                    <p class="text-gray-600 mt-4">Vous n'avez aucun avertissement. Continuez comme ça !</p>
                </div>
            {% else %}
                <div class="space-y-6">
                    {% for warning in warnings %}
                        <div class="border border-orange-200 rounded-lg p-6 {% if not warning.isAcknowledged %}bg-orange-50{% else %}bg-gray-50{% endif %}">
                            <div class="flex items-start justify-between">
                                <div class="flex-grow">
                                    <div class="flex items-center gap-3 mb-2">
                                        <span class="text-2xl">⚠️</span>
                                        <div>
                                            <h3 class="font-bold text-gray-900">
                                                Avertissement #{{ loop.index }}
                                            </h3>
                                            <p class="text-sm text-gray-600">
                                                {{ warning.createdAt|date('d/m/Y à H:i') }}
                                                • Par {{ warning.moderator.username }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="mt-4 p-4 bg-white border border-gray-200 rounded">
                                        <p class="text-gray-700">{{ warning.reason }}</p>
                                    </div>
                                    {% if warning.relatedPostId %}
                                        <p class="text-xs text-gray-500 mt-2">
                                            Concerne le message #{{ warning.relatedPostId }}
                                        </p>
                                    {% endif %}
                                </div>
                                {% if not warning.isAcknowledged %}
                                    <form method="post" action="{{ path('app_profile_acknowledge_warning', {id: warning.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('acknowledge_warning') }}">
                                        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm cursor-pointer">
                                            ✓ J'ai compris
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="text-green-600 text-sm">✓ Lu le {{ warning.acknowledgedAt|date('d/m/Y') }}</span>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% if user.warningCount >= 2 and user.warningCount < 3 %}
                    <div class="mt-8 p-6 bg-red-50 border-l-4 border-red-500 rounded-r-lg">
                        <h3 class="font-bold text-red-900">⚠️ Attention !</h3>
                        <p class="text-red-800 mt-2">
                            Vous avez {{ user.warningCount }} avertissement{{ user.warningCount > 1 ? 's' : '' }}.
                            Un troisième avertissement entraînera le bannissement automatique de votre compte.
                        </p>
                        <p class="text-red-700 mt-2">
                            Merci de respecter les
                            <a href="{{ path('app_terms') }}" class="underline font-medium">Conditions d'Utilisation</a>
                            et les règles de la communauté.
                        </p>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}