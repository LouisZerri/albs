{% extends 'base.html.twig' %}

{% block title %}Mon profil - √Ä la bonne station{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-4">
    
    {# En-t√™te du profil #}
    <div class="bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 rounded-3xl shadow-2xl p-8 mb-8 text-white relative overflow-hidden">
        {# Cercles d√©coratifs #}
        <div class="absolute top-0 right-0 size-64 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 size-48 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"></div>
        
        <div class="relative flex items-center justify-between flex-wrap gap-6">
            <div class="flex items-center space-x-6">
                {# Avatar #}
                <div class="relative">
                    <div class="size-28 rounded-full overflow-hidden bg-white/20 backdrop-blur-sm flex items-center justify-center ring-4 ring-white/30 shadow-xl">
                        {% if user.avatarUrl %}
                            <img src="{{ asset('uploads/avatars/' ~ user.avatarUrl) }}" alt="{{ user.username }}" class="size-full object-cover">
                        {% else %}
                            <span class="text-6xl">üë§</span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="flex-grow">
                    <div class="flex items-center space-x-3 flex-wrap gap-2">
                        <h1 class="text-4xl font-black tracking-tight">{{ user.username }}</h1>
                        
                        {# Rang #}
                        {% set totalStations = totalPassed + totalStopped %}
                        {% if totalStations >= 500 %}
                            <span class="px-3 py-1 bg-yellow-400 text-yellow-900 rounded-full text-sm font-bold">üèÖ Expert</span>
                        {% elseif totalStations >= 200 %}
                            <span class="px-3 py-1 bg-purple-400 text-purple-900 rounded-full text-sm font-bold">üéØ Voyageur</span>
                        {% elseif totalStations >= 50 %}
                            <span class="px-3 py-1 bg-blue-400 text-blue-900 rounded-full text-sm font-bold">üöá Explorateur</span>
                        {% else %}
                            <span class="px-3 py-1 bg-green-400 text-green-900 rounded-full text-sm font-bold">üå± D√©butant</span>
                        {% endif %}
                        
                        {# Badges #}
                        {% set displayedBadgeIds = user.displayedBadges %}
                        <div class="flex space-x-1">
                            {% for badgeStatus in badgesStatus %}
                                {% if badgeStatus.unlocked and badgeStatus.badge.id in displayedBadgeIds %}
                                    <span class="text-3xl hover:scale-125 transition-transform cursor-help" title="{{ badgeStatus.badge.name }}">
                                        {{ badgeStatus.badge.icon }}
                                    </span>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <p class="text-blue-100 mt-2 text-lg">{{ user.email }}</p>
                    <p class="text-sm text-blue-200 mt-2 flex items-center space-x-2">
                        <span>üìÖ</span>
                        <span>Membre depuis le {{ user.createdAt|date('d/m/Y') }}</span>
                    </p>
                </div>
            </div>
            
            <a href="{{ path('app_profile_edit') }}" class="bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white font-semibold px-6 py-3 rounded-xl transition-all duration-300 flex items-center space-x-2 hover:scale-105 hover:shadow-lg border border-white/30">
                <span>‚úèÔ∏è</span>
                <span>Modifier</span>
            </a>
        </div>
    </div>

    {# Statistiques globales avec animations #}
    <div class="grid md:grid-cols-3 gap-6 mb-8">
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl shadow-lg p-6 border border-blue-200 hover:shadow-xl hover:scale-105 transition-all duration-300 animate-count stagger-1 opacity-0">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-600 text-sm font-medium mb-1">Stations pass√©es</p>
                    <p class="text-4xl font-black text-blue-700" data-counter="{{ totalPassed }}">{{ totalPassed }}</p>
                    <p class="text-xs text-blue-500 mt-1">Tu as travers√© ces stations</p>
                </div>
                <div class="text-5xl animate-float">üö∂</div>
            </div>
            <div class="mt-4 bg-blue-200 rounded-full h-2">
                <div class="bg-blue-600 h-2 rounded-full animate-progress" style="width: {{ (totalPassed / 309 * 100)|round }}%"></div>
            </div>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-2xl shadow-lg p-6 border border-green-200 hover:shadow-xl hover:scale-105 transition-all duration-300 animate-count stagger-2 opacity-0">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-green-600 text-sm font-medium mb-1">Stations visit√©es</p>
                    <p class="text-4xl font-black text-green-700" data-counter="{{ totalStopped }}">{{ totalStopped }}</p>
                    <p class="text-xs text-green-500 mt-1">Tu t'y es arr√™t√©(e)</p>
                </div>
                <div class="text-5xl animate-float" style="animation-delay: 0.5s;">‚úÖ</div>
            </div>
            <div class="mt-4 bg-green-200 rounded-full h-2">
                <div class="bg-green-600 h-2 rounded-full animate-progress" style="width: {{ (totalStopped / 309 * 100)|round }}%"></div>
            </div>
        </div>

        <div class="bg-gradient-to-br from-purple-50 to-violet-100 rounded-2xl shadow-lg p-6 border border-purple-200 hover:shadow-xl hover:scale-105 transition-all duration-300 animate-count stagger-3 opacity-0">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-purple-600 text-sm font-medium mb-1">Badges d√©bloqu√©s</p>
                    <p class="text-4xl font-black text-purple-700" data-counter="{{ badgesStatus|filter(b => b.unlocked)|length }}">{{ badgesStatus|filter(b => b.unlocked)|length }}</p>
                    <p class="text-xs text-purple-500 mt-1">sur {{ badgesStatus|length }} disponibles</p>
                </div>
                <div class="text-5xl animate-float" style="animation-delay: 1s;">üèÜ</div>
            </div>
            <div class="mt-4 bg-purple-200 rounded-full h-2">
                <div class="bg-purple-600 h-2 rounded-full animate-progress" style="width: {{ (badgesStatus|filter(b => b.unlocked)|length / badgesStatus|length * 100)|round }}%"></div>
            </div>
        </div>
    </div>

    {# Section des badges en accord√©on #}
    <div class="bg-white rounded-3xl shadow-xl overflow-hidden mb-8 border border-gray-100">
        <div class="bg-gradient-to-r from-yellow-400 via-orange-400 to-red-400 px-6 py-5">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-black text-white flex items-center space-x-2">
                        <span>üèÜ</span>
                        <span>Mes badges</span>
                    </h2>
                    <p class="text-sm text-white/80 mt-1">
                        {{ badgesStatus|filter(b => b.unlocked)|length }} / {{ badgesStatus|length }} d√©bloqu√©s
                        <span class="mx-2">‚Ä¢</span>
                        Choisis jusqu'√† 3 badges √† afficher
                    </p>
                </div>
                <div class="text-5xl">üéñÔ∏è</div>
            </div>
        </div>

        <div class="p-6 bg-gradient-to-b from-gray-50 to-white">
            {# Accord√©on badges #}
            <div x-data="{ 
                openSection: 'unlocked',
                unlockedCount: {{ badgesStatus|filter(b => b.unlocked)|length }},
                lockedCount: {{ badgesStatus|filter(b => not b.unlocked)|length }}
            }" class="space-y-4">
                
                {# Section Badges D√©bloqu√©s #}
                <div class="border-2 border-green-200 rounded-2xl overflow-hidden bg-white">
                    <button @click="openSection = openSection === 'unlocked' ? null : 'unlocked'"
                            class="w-full px-6 py-4 flex items-center justify-between bg-gradient-to-r from-green-50 to-emerald-50 hover:from-green-100 hover:to-emerald-100 transition-all duration-200">
                        <div class="flex items-center gap-4">
                            <div class="text-3xl">‚úÖ</div>
                            <div class="text-left">
                                <h3 class="text-xl font-bold text-gray-900">Badges d√©bloqu√©s</h3>
                                <p class="text-sm text-gray-600" x-text="`${unlockedCount} badge${unlockedCount > 1 ? 's' : ''} obtenu${unlockedCount > 1 ? 's' : ''}`"></p>
                            </div>
                        </div>
                        <svg class="w-6 h-6 text-gray-600 transition-transform duration-300"
                            :class="{ 'rotate-180': openSection === 'unlocked' }"
                            fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    
                    <div x-show="openSection === 'unlocked'" x-collapse class="p-6 bg-white">
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
                            {% for badgeStatus in badgesStatus %}
                                {% if badgeStatus.unlocked %}
                                    <div class="group rounded-2xl p-5 transition-all duration-300 hover:shadow-xl bg-gradient-to-br from-yellow-50 via-orange-50 to-amber-50 border-2 border-yellow-300 hover:border-yellow-400 badge-shine flex flex-col h-full"
                                        data-controller="badge-toggle"
                                        data-badge-toggle-badge-id-value="{{ badgeStatus.badge.id }}"
                                        data-badge-toggle-displayed-value="{{ badgeStatus.badge.id in user.displayedBadges ? 'true' : 'false' }}">
                                        
                                        {# Contenu qui grandit #}
                                        <div class="flex items-start space-x-4 mb-4 flex-grow">
                                            <div class="relative flex-shrink-0">
                                                <div class="text-5xl transition-transform duration-300 group-hover:scale-110">
                                                    {{ badgeStatus.badge.icon }}
                                                </div>
                                                <div class="absolute -top-1 -right-1 w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                                                    <span class="text-white text-xs">‚úì</span>
                                                </div>
                                            </div>
                                            
                                            <div class="flex-grow min-w-0">
                                                <h3 class="font-bold text-gray-900 text-lg mb-1">{{ badgeStatus.badge.name }}</h3>
                                                <p class="text-sm text-gray-600 leading-relaxed">{{ badgeStatus.badge.description }}</p>
                                            </div>
                                        </div>

                                        {# Bouton toujours en bas #}
                                        <button 
                                            data-action="click->badge-toggle#toggle"
                                            class="w-full font-semibold text-sm py-2.5 px-4 rounded-xl transition-all duration-300 flex items-center justify-center space-x-2 cursor-pointer
                                                {% if badgeStatus.badge.id in user.displayedBadges %}
                                                    bg-gradient-to-r from-green-500 to-emerald-600 text-white hover:from-green-600 hover:to-emerald-700 shadow-md hover:shadow-lg
                                                {% else %}
                                                    bg-gradient-to-r from-blue-500 to-indigo-600 text-white hover:from-blue-600 hover:to-indigo-700 shadow-md hover:shadow-lg
                                                {% endif %}">
                                            {% if badgeStatus.badge.id in user.displayedBadges %}
                                                <span>‚úì</span>
                                                <span>Affich√©</span>
                                            {% else %}
                                                <span>+</span>
                                                <span>Afficher</span>
                                            {% endif %}
                                        </button>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {# Section Badges Verrouill√©s #}
                <div class="border-2 border-gray-200 rounded-2xl overflow-hidden bg-white">
                    <button @click="openSection = openSection === 'locked' ? null : 'locked'"
                            class="w-full px-6 py-4 flex items-center justify-between bg-gradient-to-r from-gray-50 to-gray-100 hover:from-gray-100 hover:to-gray-200 transition-all duration-200">
                        <div class="flex items-center gap-4">
                            <div class="text-3xl">üîí</div>
                            <div class="text-left">
                                <h3 class="text-xl font-bold text-gray-900">Badges √† d√©bloquer</h3>
                                <p class="text-sm text-gray-600" x-text="`${lockedCount} badge${lockedCount > 1 ? 's' : ''} restant${lockedCount > 1 ? 's' : ''}`"></p>
                            </div>
                        </div>
                        <svg class="w-6 h-6 text-gray-600 transition-transform duration-300"
                            :class="{ 'rotate-180': openSection === 'locked' }"
                            fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    
                    <div x-show="openSection === 'locked'" x-collapse class="p-6 bg-white">
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
                            {% for badgeStatus in badgesStatus %}
                                {% if not badgeStatus.unlocked %}
                                    <div class="group rounded-2xl p-5 transition-all duration-300 hover:shadow-xl bg-gray-100 border-2 border-gray-200 hover:border-gray-300 flex flex-col h-full">
                                        
                                        {# Contenu qui grandit #}
                                        <div class="flex items-start space-x-4 mb-4 flex-grow">
                                            <div class="relative flex-shrink-0">
                                                <div class="text-5xl transition-transform duration-300 group-hover:scale-110 grayscale opacity-40 badge-locked">
                                                    {{ badgeStatus.badge.icon }}
                                                </div>
                                            </div>
                                            
                                            <div class="flex-grow min-w-0">
                                                <h3 class="font-bold text-gray-900 text-lg mb-1">{{ badgeStatus.badge.name }}</h3>
                                                <p class="text-sm text-gray-600 leading-relaxed">{{ badgeStatus.badge.description }}</p>
                                            </div>
                                        </div>

                                        {# Barre de progression toujours en bas #}
                                        <div>
                                            <div class="flex justify-between text-sm mb-2">
                                                <span class="text-gray-500 font-medium">Progression</span>
                                                <span class="font-bold text-gray-700">{{ badgeStatus.progress }}%</span>
                                            </div>
                                            <div class="bg-gray-300 rounded-full h-3 overflow-hidden">
                                                <div class="bg-gradient-to-r from-blue-500 to-purple-500 h-3 rounded-full transition-all duration-1000" 
                                                    style="width: {{ badgeStatus.progress }}%"></div>
                                            </div>
                                            <p class="text-xs text-gray-400 mt-2 text-center">
                                                {% if badgeStatus.progress >= 75 %}
                                                    üî• Presque l√† !
                                                {% elseif badgeStatus.progress >= 50 %}
                                                    üí™ Bon progr√®s !
                                                {% elseif badgeStatus.progress >= 25 %}
                                                    üöÄ Continue !
                                                {% else %}
                                                    üåü √Ä d√©couvrir
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Progression par ligne EN ACCORD√âON #}
    <div class="bg-white rounded-3xl shadow-xl overflow-hidden mb-8 border border-gray-100">
        <div class="bg-gradient-to-r from-gray-800 via-gray-900 to-black px-6 py-5">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-black text-white flex items-center space-x-2">
                        <span>üöá</span>
                        <span>Ma progression par ligne</span>
                    </h2>
                    <p class="text-sm text-gray-400 mt-1">
                        {{ lineStats|length }} ligne{{ lineStats|length > 1 ? 's' : '' }} explor√©e{{ lineStats|length > 1 ? 's' : '' }}
                    </p>
                </div>
                <div class="text-5xl">üó∫Ô∏è</div>
            </div>
        </div>

        <div class="p-6">
            {% if lineStats|length > 0 %}
                <div x-data="{ openLine: null }" class="space-y-4">
                    {% for stat in lineStats %}
                        <div class="border-2 border-gray-200 rounded-2xl overflow-hidden bg-white hover:border-gray-300 transition-colors">
                            {# Header cliquable #}
                            <button @click="openLine = openLine === {{ loop.index }} ? null : {{ loop.index }}"
                                    class="w-full px-6 py-4 flex items-center justify-between hover:bg-gray-50 transition-all duration-200">
                                <div class="flex items-center gap-5">
                                    {# Logo de la ligne #}
									<div class="relative">
										<div class="w-16 h-16 rounded-full flex items-center justify-center text-white font-black shadow-lg" 
											style="background: linear-gradient(135deg, {{ stat.line.color }}, {{ stat.line.color }}dd); color: {{ stat.line.textColor }};">
											{% if 'bis' in stat.line.number %}
												<div class="flex items-center gap-1">
													<span class="text-3xl leading-none">{{ stat.line.number|replace({'bis': ''}) }}</span>
													<span class="text-xs leading-none">bis</span>
												</div>
											{% else %}
												<span class="text-3xl">{{ stat.line.number }}</span>
											{% endif %}
										</div>
										{# Indicateur de compl√©tion #}
										{% if stat.stoppedPercentage == 100 %}
											<div class="absolute -top-1 -right-1 w-6 h-6 bg-green-500 rounded-full flex items-center justify-center shadow-md">
												<span class="text-white text-xs">‚úì</span>
											</div>
										{% endif %}
									</div>
                                    
                                    <div class="text-left">
                                        <h3 class="font-black text-gray-900 text-xl">Ligne {{ stat.line.number }}</h3>
                                        <p class="text-sm text-gray-600">{{ stat.total }} stations</p>
                                        
                                        {# Mini r√©sum√© des stats #}
                                        <div class="flex items-center gap-4 mt-2 text-xs">
                                            <span class="text-blue-600 font-semibold">
                                                üö∂ {{ stat.passed }}/{{ stat.total }}
                                            </span>
                                            <span class="text-green-600 font-semibold">
                                                ‚úÖ {{ stat.stopped }}/{{ stat.total }}
                                            </span>
                                            {% if stat.stoppedPercentage == 100 %}
                                                <span class="px-2 py-0.5 bg-green-100 text-green-700 rounded-full font-bold">
                                                    COMPL√àTE
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="flex items-center gap-3">
                                    {# Barre de progression circulaire #}
                                    <div class="relative w-12 h-12">
                                        <svg class="w-12 h-12 transform -rotate-90">
                                            <circle cx="24" cy="24" r="20" stroke="currentColor" 
                                                    stroke-width="4" fill="none" 
                                                    class="text-gray-200"></circle>
                                            <circle cx="24" cy="24" r="20" 
                                                    stroke="{{ stat.line.color }}" 
                                                    stroke-width="4" fill="none"
                                                    stroke-linecap="round"
                                                    stroke-dasharray="{{ (stat.stoppedPercentage * 1.256)|round(2) }} 125.6"
                                                    class="transition-all duration-1000"></circle>
                                        </svg>
                                        <div class="absolute inset-0 flex items-center justify-center">
                                            <span class="text-xs font-bold text-gray-700">{{ stat.stoppedPercentage|round }}%</span>
                                        </div>
                                    </div>
                                    
                                    {# Fl√®che #}
                                    <svg class="w-6 h-6 text-gray-600 transition-transform duration-300"
                                         :class="{ 'rotate-180': openLine === {{ loop.index }} }"
                                         fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </div>
                            </button>
                            
                            {# Contenu d√©roulant #}
                            <div x-show="openLine === {{ loop.index }}" x-collapse class="border-t border-gray-200">
                                <div class="p-6 bg-gray-50">
                                    
                                    {# Mini-map des stations #}
                                    <div class="mb-5 p-4 bg-white rounded-xl border border-gray-200">
                                        <p class="text-xs text-gray-500 mb-3 font-medium">Aper√ßu de la ligne</p>
                                        <div class="relative h-8 flex items-center">
                                            {# Ligne de fond #}
                                            <div class="absolute inset-x-4 h-2 rounded-full" style="background-color: {{ stat.line.color }}40;"></div>
                                            <div class="absolute left-4 h-2 rounded-full transition-all duration-1000" 
                                                 style="background-color: {{ stat.line.color }}; width: calc((100% - 2rem) * {{ stat.stoppedPercentage / 100 }});"></div>
                                            
                                            {# Points des stations #}
                                            <div class="absolute inset-x-4 flex justify-between items-center">
                                                {% for i in 0..9 %}
                                                    {% set stationProgress = i * 10 %}
                                                    <div class="station-dot w-3 h-3 rounded-full border-2 border-white shadow-sm cursor-pointer
                                                        {% if stationProgress < stat.stoppedPercentage %}
                                                            bg-green-500
                                                        {% else %}
                                                            bg-gray-300
                                                        {% endif %}"
                                                         style="{% if stationProgress < stat.stoppedPercentage %}background-color: {{ stat.line.color }};{% endif %}"
                                                         title="{{ stationProgress }}% de la ligne"></div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <div class="flex justify-between text-xs text-gray-400 mt-2 px-4">
                                            <span>D√©but</span>
                                            <span>Fin</span>
                                        </div>
                                    </div>

                                    {# Barres de progression d√©taill√©es #}
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                        <div class="bg-blue-50 rounded-xl p-4 border border-blue-100">
                                            <div class="flex justify-between text-base mb-2">
                                                <span class="text-gray-600 font-medium flex items-center space-x-2">
                                                    <span>üö∂</span>
                                                    <span>Pass√©</span>
                                                </span>
                                                <span class="font-black text-blue-600">{{ stat.passed }}/{{ stat.total }}</span>
                                            </div>
                                            <div class="bg-blue-200 rounded-full h-4 overflow-hidden">
                                                <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-4 rounded-full transition-all duration-1000 animate-progress" 
                                                     style="width: {{ stat.passedPercentage }}%"></div>
                                            </div>
                                            <p class="text-sm text-blue-600 mt-2 font-semibold">{{ stat.passedPercentage }}%</p>
                                        </div>

                                        <div class="bg-green-50 rounded-xl p-4 border border-green-100">
                                            <div class="flex justify-between text-base mb-2">
                                                <span class="text-gray-600 font-medium flex items-center space-x-2">
                                                    <span>‚úÖ</span>
                                                    <span>Visit√©</span>
                                                </span>
                                                <span class="font-black text-green-600">{{ stat.stopped }}/{{ stat.total }}</span>
                                            </div>
                                            <div class="bg-green-200 rounded-full h-4 overflow-hidden">
                                                <div class="bg-gradient-to-r from-green-500 to-emerald-600 h-4 rounded-full transition-all duration-1000 animate-progress" 
                                                     style="width: {{ stat.stoppedPercentage }}%"></div>
                                            </div>
                                            <p class="text-sm text-green-600 mt-2 font-semibold">{{ stat.stoppedPercentage }}%</p>
                                        </div>
                                    </div>

                                    {# Bouton explorer la ligne #}
                                    <a href="{{ path('app_line_show', {id: stat.line.id}) }}" 
                                       class="flex items-center justify-center space-x-2 text-white font-semibold px-6 py-3 rounded-xl transition-all duration-300 hover:scale-105 shadow-md hover:shadow-lg w-full"
                                       style="background: linear-gradient(135deg, {{ stat.line.color }}, {{ stat.line.color }}cc);">
                                        <span>Explorer la ligne {{ stat.line.number }}</span>
                                        <span>‚Üí</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                {# √âtat vide #}
