{% use 'form_div_layout.html.twig' %}

{% block form_row %}
    <div class="mb-4">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block form_errors %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <p class="mt-1 text-sm text-red-600">{{ error.message }}</p>
        {% endfor %}
    {% endif %}
{% endblock %}