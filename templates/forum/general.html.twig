{% extends 'base.html.twig' %}

{% block title %}Forum G√©n√©ral - √Ä la bonne station{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto px-4 py-8">
    {# En-t√™te #}
    <div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <div class="w-16 h-16 rounded-full bg-gradient-to-br from-purple-500 to-indigo-600 flex items-center justify-center text-3xl">
                    üí¨
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Forum G√©n√©ral</h1>
                    <p class="text-gray-600">Discussions ouvertes √† tous les sujets</p>
                </div>
            </div>
            <div class="flex items-center gap-3">
                <a href="{{ path('app_forum') }}" class="text-blue-600 hover:text-blue-800 font-medium">
                    ‚Üê Retour au forum
                </a>
                {% if app.user %}
                    <a href="{{ path('app_discussion_new_general') }}" 
                       class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-xl font-medium transition-colors">
                        Nouvelle discussion
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    {# Liste des discussions #}
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        {% if discussions is empty %}
            <div class="p-12 text-center">
                <div class="text-6xl mb-4">üí≠</div>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">Aucune discussion pour le moment</h3>
                <p class="text-gray-500 mb-4">Soyez le premier √† lancer un sujet !</p>
                {% if app.user %}
                    <a href="{{ path('app_discussion_new_general') }}" 
                       class="inline-block bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-xl font-medium transition-colors">
                        Cr√©er une discussion
                    </a>
                {% endif %}
            </div>
        {% else %}
            <div class="divide-y divide-gray-100">
                {% for discussion in discussions %}
                    <a href="{{ path('app_discussion_show', {id: discussion.id}) }}" 
                       class="block p-4 hover:bg-gray-50 transition-colors">
                        <div class="flex items-start gap-4">
                            <div class="shrink-0">
                                {% if discussion.author.avatarUrl %}
                                    <img src="{{ discussion.author.avatarUrl }}" alt="" class="w-10 h-10 rounded-full object-cover">
                                {% else %}
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-400 to-indigo-500 flex items-center justify-center text-white font-bold">
                                        {{ discussion.author.username|first|upper }}
                                    </div>
                                {% endif %}
                            </div>
                            <div class="flex-grow min-w-0">
                                <div class="flex items-center gap-2 mb-1">
                                    {% if discussion.isPinned %}
                                        <span class="text-orange-500">üìå</span>
                                    {% endif %}
                                    {% if discussion.isLocked %}
                                        <span class="text-gray-500">üîí</span>
                                    {% endif %}
                                    <h3 class="font-semibold text-gray-900 truncate">{{ discussion.title }}</h3>
                                </div>
                                <p class="text-sm text-gray-500">
                                    Par <span class="font-medium text-gray-700">{{ discussion.author.username }}</span>
                                    ¬∑ {{ discussion.createdAt|date('d/m/Y √† H:i') }}
                                </p>
                            </div>
                            <div class="shrink-0 text-right text-sm">
                                <div class="text-gray-600">üí¨ {{ discussion.replyCount }}</div>
                                <div class="text-gray-400">üëÅÔ∏è {{ discussion.viewCount }}</div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}